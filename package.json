{
  "name": "@orbitdb/voyager",
  "version": "1.0.0",
  "description": "A pinning peer for OrbitDB databases.",
  "main": "./src/index.js",
  "type": "module",
  "author": "OrbitDB",
  "license": "MIT",
  "bin": {
    "voyager": "./src/bin/cli.js"
  },
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^12.0.0",
    "@orbitdb/core": "^2.2.0",
    "@orbitdb/set-db": "^1.0.0",
    "blockstore-level": "^1.1.8",
    "datastore-level": "^10.1.7",
    "helia": "^4.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "c8": "^9.1.0",
    "it-drain": "^3.0.5",
    "mocha": "^10.3.0",
    "os-browserify": "^0.3.0",
    "playwright-test": "^14.1.3",
    "rimraf": "^5.0.5",
    "standard": "^17.1.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "build:tests": "rm -f test/browser/bundle.js* && webpack --config ./conf/webpack.tests.config.js",
    "test": "mocha -config ./test/.mocharc.json",
    "test:ci": "c8 npm run test",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "start:orbiter": "mkdir -p ./voyager/orbiter && cp -Rf test/browser/fixtures/keystore ./voyager/orbiter && node ./src/bin/cli.js daemon -p 54321 --allow",
    "test:browser": "npm run build:tests && ./node_modules/.bin/playwright-test test/browser/bundle.js --runner mocha"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
